<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="#FAF0D2"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:weightSum="1">

	<Button
			style="?android:attr/buttonStyleSmall"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/beClient"
			android:text="@string/be_client"
			android:textSize="15dp"
			android:textStyle="bold"
			android:textColor="@drawable/button_selector"
			android:background="@android:color/transparent"
			android:layout_marginTop="10dp"/>

	<View
			android:layout_width="fill_parent"
			android:layout_height="1dp"
			android:background="#B0E0E6"/>

	<Button
			style="?android:attr/buttonStyleSmall"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/beServer"
			android:text="be server"
			android:textSize="15dp"
			android:textStyle="bold"
			android:textColor="@drawable/button_selector"
			android:background="@android:color/transparent" android:layout_marginTop="10dp"
			android:layout_marginBottom="10dp"/>

</LinearLayout>